{
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react-jsx",
    "checkJs": false,
    "module": "esnext",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./*"],
      "@assets/*": ["./assets/*"],
      "@components/*": ["./components/*"],
      "@utils/*": ["./utils/*"],
      "@hooks/*": ["./hooks/*"],
      "@styles/*": ["./styles/*"],
      "@views/*": ["./views/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
